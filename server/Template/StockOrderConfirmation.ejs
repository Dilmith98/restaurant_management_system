<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Invoice</title>
    <style>
      body {
        padding: 5%;
        color: #1a1e21;
      }
      header,
      h1 {
        display: block;
        text-align: center;
      }
      .Container {
        margin: 3%;
        background-color: #fdbe102d;
        padding: 3%;
      }
      .Deliverer,
      .Customer {
        margin-bottom: 2%;
      }
      .items {
        width: 100%;
        text-align: center;
        border: 2px solid #1a1e21;
      }
      .items th {
        border-bottom: 2px solid #1a1e21;
      }
      .items td {
        padding: 5px;
      }
    </style>
  </head>
  <body>
    <div class="Container">
      <header>
        <img src="cid:logo" class="logo" />
      </header>
      <main>
        <h1>Order Confirmation</h1>
        <h2>Order Id: <%= id %></h2>

        <h3>Bill To:</h3>
        <table class="Customer">
          <tr>
            <td><b>Name</b></td>
            <td>:</td>
            <td><%= ManagerName %></td>
          </tr>
          <tr>
            <td><b>Address</b></td>
            <td>:</td>
            <td><%= ManagerEmail %></td>
          </tr>
          <tr>
            <td><b>Contact No</b></td>
            <td>:</td>
            <td><%= ManagerPhone %></td>
          </tr>
        </table>
        <h3>Deliverer :</h3>
        <table class="Deliverer">
          <tr>
            <td><b>Name</b></td>
            <td>:</td>
            <td><%= SupplierName %></td>
          </tr>
          <tr>
            <td><b>Contact No</b></td>
            <td>:</td>
            <td><%= SupplierPhone %></td>
          </tr>
          <tr>
            <td><b>Email</b></td>
            <td>:</td>
            <td><%= SupplierEmail %></td>
          </tr>
        </table>
        <table class="items">
          <thead>
            <tr>
              <th>Item</th>
              <th>Quantity</th>
              <th>Unit Price</th>
            </tr>
          </thead>
          <tbody>
            <% orderedItems.forEach((item)=>{ %>
            <tr>
              <td><%= item.ItemName %></td>
              <td><%= item.Quantity%></td>
              <td>Rs. <%= item.Price %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <tfoot>
          <tr>
            <td colspan="3"><b>Total:</b></td>
            <td>Rs. <%= totalPrice %></td>
          </tr>
        </tfoot>
      </main>
      <footer>
        <h3>Thank you!</h3>
      </footer>
    </div>
  </body>
</html>
